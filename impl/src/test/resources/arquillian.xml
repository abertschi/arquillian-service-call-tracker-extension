<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <engine>
        <property name="deploymentExportPath">target/deployments</property>
    </engine>

    <extension qualifier="serviceCallTracker">
        <property name="recordingEnabled"></property>
        <property name="recordingStorageBase"></property>
        <property name="recordingSourceType"></property>
        <property name="recordingMode"></property>

        <property name="replayingEnabled"></property>
        <property name="replayingStorageBase"></property>
        <property name="replayingSourceType"></property>
        <property name="replayingSkipDoubles"></property>

        <property name="throwExceptionOnNotFound"></property>
        <property name="throwExceptionOnIncompatibleReturnType"></property>
        <property name="storageBase"></property>
    </extension>
</arquillian>
